<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="{{ asset('assets/css/connexion.css') }}"/>
    <title>connexion</title>

</head>
<body>
<div id="corps">
    <section>
        <div>
            <img src="images/forum_logo.png">
        </div>
        {% if app.session.flashBag.has('info') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('info') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        <div>
            <form class="connexion-form" action="" method = "post">

                <div class="connexion-wrap">
                    <p class="connexion-img"><i class="icon_lock_alt"></i></p>
                    <div class="input-group">
                        <label class="nUtilisateur">Email utilisateur : </label>
                        {{ form_widget(form.userEmail) }}
                    </div>
                    <div class="input-group">
                        <label class="mdp">Mot de passe : </label>
                        {{ form_widget(form.userPassword) }}
                    </div>

                    <input type="checkbox" onclick="Afficher()" class="checkbox">Afficher le mot de passe<br>
                    <input  type="submit" name="connexion" value="Connexion" class="connexion">

                    <p class="ici"> Cr√©ez un compte <a href="{{ path('inscription') }}">ici</a> </p>
                </div>
            </form>

        </div>

    </section>
</div>

</body>

</html>

<script>
    function Afficher() {

        var input = document.getElementById("mdp");

        if (input.type === "password") { input.type = "text";}

        else{ input.type = "password";}
    }
</script>
